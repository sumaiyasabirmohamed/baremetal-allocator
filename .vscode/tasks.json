{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Allocator Project",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/source/main.c",
                "${workspaceFolder}/source/allocator/src/allocator.c",
                "-I${workspaceFolder}/source/allocator/inc",
                "-o",
                "${workspaceFolder}/out/allocator"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
